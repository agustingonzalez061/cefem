<body>

<button id="btnContactanos">Contactanos</button>

<div class="popup-overlay" id="popupOverlay">
  <div class="popup">
    <h3>Ingrese su número de teléfono</h3>
    <label for="telefono">Teléfono:</label>
    <input type="tel" id="telefono" placeholder="Ej: +54 9 11 1234 5678" />
    <button id="btnEnviar">Enviar</button>
    <button class="cancel-btn" id="btnCancelar">Cancelar</button>
  </div>
</div>

<script>
  const btnContactanos = document.getElementById('btnContactanos');
  const popupOverlay = document.getElementById('popupOverlay');
  const btnCancelar = document.getElementById('btnCancelar');
  const btnEnviar = document.getElementById('btnEnviar');
  const inputTelefono = document.getElementById('telefono');

  btnContactanos.onclick = () => {
    popupOverlay.style.display = 'flex';
    inputTelefono.value = '';
    inputTelefono.focus();
  };

  btnCancelar.onclick = () => {
    popupOverlay.style.display = 'none';
  };

  btnEnviar.onclick = () => {
    const telefono = inputTelefono.value.trim();
    if (telefono === '') {
      alert('Por favor ingrese un número de teléfono válido.');
      inputTelefono.focus();
      return;
    }
    alert(`Número de teléfono enviado: ${telefono}`);
    popupOverlay.style.display = 'none';
  };

  // Para cerrar popup clickeando fuera del cuadro
  popupOverlay.onclick = (e) => {
    if(e.target === popupOverlay) {
      popup
